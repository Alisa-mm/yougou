.address-info{
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.address-info .tel{
  display: flex;
  justify-content: center;
  align-items: center;
}
.address-info .tel::after{
  display: block;
  content: "";
  border-right:1px solid #999;
  border-bottom: 1px solid #999;
  transform: rotate(-45deg);
  width: 8px;
  height: 8px;
  margin-left: 20rpx;
}
.address-detail{
  padding: 20rpx;
}
.address image{
  width: 100%;
  height: 15rpx;
  display: block;
}
.goods-title{
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 20rpx #eee solid;
  border-bottom: 1px solid #ddd;
}
.goods-title view{
  margin-right: 20rpx;
}
.goods-list{
   padding-bottom: 120rpx;
}
.goods-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px #eee solid;
}
.goods-item image{
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}
.goods-item icon{
    margin-right: 20rpx;
}
.goods-right{
  width: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex:1;
  margin-left: 20rpx;
}
.goods-right-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-right-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.goods-price{
  color: red;
}
.goods-number{
  display: flex;
  align-items: center;
}
.goods-number .calc-button{
 width: 20px;
 height: 20px;
 border: 1px #999 solid;
 display: flex;
 justify-content: center;
 align-items: center;
}
.goods-number input{
  width: 36px;
  text-align: center;
}
.checkout{
  width:750rpx;
  position: fixed;
  left:0;
  bottom:48px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 9;
  background: #fff;
}
.allselect{
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.allselect icon{
  margin-right: 20rpx;
}
.allprice{
  flex: 1;
  padding:0 20px;
}
.allprice-top text{
   color:red;
}
.allprice-top text text{
  font-size:12px;
}
.allprice-bottom{
  color: #999;
  font-size: 12px;
}
.checkout-btn{
  width: 230rpx;
  height:100rpx;
  background: #eb4450;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
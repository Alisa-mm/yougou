.tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #ddd;
}
.product-list{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
  padding: 20rpx;
  height: 230rpx;
}
.product-list image{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}
.content{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content .title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .price{
  font-size:36rpx;
  color: #eb4450;
}
.load-more{
    padding: 20px;
    font-size: 13px;
    color:#999;
    text-align: center;
}